{
	"AWSEBDockerrunVersion": 2,
	"containerDefinitions": [
		{
		"name": "client",
		"image": "pkollarath/multi-client",
		"host": "client",
		"essential": false,
		"memory": 128
		},
		{
		"name": "server",
		"image": "pkollarath/multi-server",
		"host": "api",
		"essential": false,
		"memory": 128
		},
		{
		"name": "worker",
		"image": "pkollarath/multi-worker",
		"host": "worker",
		"essential": false,
		"memory": 128
		},
		{
		"name": "nginx",
		"image": "pkollarath/multi-nginx",
		"host": "nginx",
		"essential": true,
		"memory": 128,
		"portMappings": [
			{ "hostPort": "80",
			  "containerPort": "80"	
			}
			],
			"links": ["client","server"]
		}
	]

}